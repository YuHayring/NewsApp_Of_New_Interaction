<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    >

    <data>

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frameLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.show.text.NewsDetailFragment">


        <RelativeLayout
            android:id="@+id/float_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.getbase.floatingactionbutton.FloatingActionsMenu
                android:id="@+id/multiple_actions"
                android:layout_width="wrap_content"

                android:layout_height="255dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginBottom="59dp"
                fab:fab_addButtonColorNormal="@color/white"
                fab:fab_addButtonColorPressed="@color/white_pressed"
                fab:fab_addButtonPlusIconColor="@color/half_black"
                fab:fab_addButtonSize="mini"
                fab:fab_expandDirection="up"
                fab:fab_labelStyle="@style/menu_labels_style">
                <!--        举报-->
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_jinggao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fabSize="mini"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_colorPressed="@color/white_pressed"
                    fab:fab_icon="@drawable/jinggao"
                    fab:fab_size="mini" />
                <!--     点赞   -->
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_dianzan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fabSize="mini"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_colorPressed="@color/white_pressed"
                    fab:fab_icon="@drawable/dianzan"
                    fab:fab_size="mini"></com.getbase.floatingactionbutton.FloatingActionButton>

                <!--        评论-->
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_pinglun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fabSize="mini"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_colorPressed="@color/white_pressed"
                    fab:fab_icon="@drawable/pinglun"
                    fab:fab_size="mini" />
                <!--        文字视频转化-->
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_zhuanhuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fabSize="mini"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_colorPressed="@color/white_pressed"
                    fab:fab_icon="@drawable/zhuanhuan"
                    fab:fab_size="mini" />
                <!--        不感兴趣-->
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_buganxingqu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fabSize="mini"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_colorPressed="@color/white_pressed"
                    fab:fab_icon="@drawable/buganxingqu"
                    fab:fab_size="mini" />
                <!--        作者界面-->
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_zuozhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fabSize="mini"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_colorPressed="@color/white_pressed"
                    fab:fab_icon="@drawable/zuozhe"
                    fab:fab_size="mini">

                </com.getbase.floatingactionbutton.FloatingActionButton>


                <!--        关注-->
                <com.getbase.floatingactionbutton.FloatingActionButton
                    android:id="@+id/action_guanzhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    fab:fabSize="mini"
                    fab:fab_colorNormal="@color/white"
                    fab:fab_colorPressed="@color/white_pressed"
                    fab:fab_icon="@drawable/guanzhu"
                    fab:fab_size="mini" />

            </com.getbase.floatingactionbutton.FloatingActionsMenu>
        </RelativeLayout>

        <Button
            android:id="@+id/buttonSeeTags"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/comment_see_tags_button_msg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.02"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/webView"
            app:layout_constraintVertical_bias="1.0" />

        <WebView
            android:id="@+id/webView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline20"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0">

        </WebView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.93" />

        <Button
            android:id="@+id/buttonFollowTags"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="@string/button_newsDetails_follow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/webView" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</layout>