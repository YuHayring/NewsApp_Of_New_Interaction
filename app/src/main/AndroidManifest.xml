<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.gdut.douyintoutiao"
    android:versionName="0.0.1 alpha">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".DouYinTouTiaoApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DouYinTouTiao">
        <activity android:name=".view.user.edit.activity.EditActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            />
        <activity
            android:name=".view.show.video.MagicVideoPlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".view.show.video.singleplayer.SingleVideoPlayActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".view.SingleFragmentContainerActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".view.show.comment.commentinvideo.CommentFragmentContainerActivity" />
        <activity android:name=".view.user.follow.activity.ActivityFollowAuthorDetails"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />/>
        <activity android:name=".view.show.search.SearchMainActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/>
        <activity android:name=".tmp.TestActivity" />
        <activity android:name=".view.show.text.NewsActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"/> <!-- 此处开启了强制竖屏的操作 -->
        <activity android:name=".view.FirstActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- 此处开启了强制竖屏的操作 -->
        <activity
            android:name=".view.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar"/>
        <activity
            android:name=".view.show.video.VerticalVideoPlayActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".view.user.follow.activity.FollowListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />


    </application>

</manifest>